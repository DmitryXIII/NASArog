<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingHorizontal="@dimen/margin_4dp"
    android:paddingTop="@dimen/margin_4dp"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/iv_unhazardous_item_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/margin_4dp"
        android:src="@drawable/ic_features"
        app:layout_constraintBottom_toTopOf="@id/tv_close_approach_date_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/holo_green_light" />

    <ImageView
        android:id="@+id/iv_move_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_burger"
        app:tint="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_add_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:src="@drawable/ic_add_item"
        app:tint="@android:color/holo_green_light"
        app:layout_constraintEnd_toStartOf="@id/iv_move_item_icon"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_delete_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:src="@drawable/ic_delete"
        app:tint="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_move_item_icon" />

    <TextView
        android:id="@+id/tv_asteroid_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        android:text="@string/asteroid_name_title"
        app:layout_constraintBottom_toTopOf="@id/tv_asteroid_magnitude_h_title"
        app:layout_constraintStart_toEndOf="@id/iv_unhazardous_item_icon"
        app:layout_constraintTop_toTopOf="@id/iv_unhazardous_item_icon" />

    <TextView
        android:id="@+id/tv_asteroid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_asteroid_name_title"
        app:layout_constraintEnd_toStartOf="@id/iv_add_item_icon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_asteroid_name_title"
        app:layout_constraintTop_toTopOf="@id/tv_asteroid_name_title"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_asteroid_magnitude_h_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        android:text="@string/asteroid_magnitude_h_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_unhazardous_item_icon"
        app:layout_constraintStart_toEndOf="@id/iv_unhazardous_item_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_asteroid_name_title" />

    <TextView
        android:id="@+id/tv_asteroid_magnitude_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_asteroid_magnitude_h_title"
        app:layout_constraintEnd_toStartOf="@id/iv_add_item_icon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_asteroid_magnitude_h_title"
        app:layout_constraintTop_toTopOf="@id/tv_asteroid_magnitude_h_title"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_close_approach_date_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        android:text="@string/asteroid_close_approach_date_title"
        app:layout_constraintBottom_toBottomOf="@id/item_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_unhazardous_item_icon" />

    <TextView
        android:id="@+id/tv_close_approach_date"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_close_approach_date_title"
        app:layout_constraintEnd_toStartOf="@id/iv_add_item_icon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_close_approach_date_title"
        app:layout_constraintTop_toTopOf="@id/tv_close_approach_date_title"
        tools:text="@tools:sample/lorem" />

    <View
        android:id="@+id/item_divider"
        android:layout_width="@dimen/zero"
        android:layout_height="1px"
        android:background="?colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>