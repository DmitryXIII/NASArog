<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/margin_4dp"
    android:paddingTop="@dimen/margin_4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="@dimen/zero"
        android:id="@+id/item_icon"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_divider"
        tools:src="@drawable/no_image_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_icon"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        app:layout_constraintTop_toTopOf="@id/item_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_icon"
        tools:text="@tools:sample/lorem"/>

    <View
        android:id="@+id/item_divider"
        android:layout_width="@dimen/zero"
        android:layout_height="1px"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>