<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/margin_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvForegroundColorSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:text="Foreground color span" />

        <TextView
            android:id="@+id/tvRelativeSizeSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:text="Relative size span" />

        <TextView
            android:id="@+id/tvBackgroundColorSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:text="Background color span" />

        <TextView
            android:id="@+id/tvTabStopSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textSize="20sp"
            android:text="TabStopSpan"/>

        <TextView
            android:id="@+id/tvAbsoluteSizeSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_gravity="center_horizontal"
            android:text="Absolute size span" />
    </LinearLayout>
</ScrollView>