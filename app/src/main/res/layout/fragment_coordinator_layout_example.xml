<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_bottom_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/moving_view_item_bottom_left"
        app:layout_behavior=".view.coordinator.MyBehavior" />

    <ImageView
        android:id="@+id/iv_bottom_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/moving_view_item_bottom_right"
        app:layout_behavior=".view.coordinator.MyBehavior" />

    <ImageView
        android:id="@+id/iv_top_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/moving_view_item_top_left"
        app:layout_behavior=".view.coordinator.MyBehavior" />

    <ImageView
        android:id="@+id/iv_top_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/moving_view_item_top_right"
        app:layout_behavior=".view.coordinator.MyBehavior" />

    <View
        android:id="@+id/vTop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <View
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_plus"
        app:layout_behavior=".view.coordinator.MyTouchBehavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>