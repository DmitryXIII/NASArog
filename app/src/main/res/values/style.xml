<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorPrimaryInverse</item>
        <item name="tint">?colorOnPrimaryContainer</item>
    </style>

    <style name="myContainedButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnPrimaryContainer</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="fabAlignmentMode">center</item>
        <item name="fabAnimationMode">scale</item>
        <item name="backgroundTint">?colorPrimaryInverse</item>
        <item name="navigationIcon">@drawable/ic_burger</item>
    </style>

    <style name="myBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?colorPrimaryInverse</item>
        <item name="elevation">@dimen/margin_16dp</item>
    </style>

    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">?colorPrimaryInverse</item>
        <item name="tabIndicatorColor">?colorOnPrimaryContainer</item>
        <item name="tabSelectedTextColor">?colorOnPrimaryContainer</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="myRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">?colorOnPrimaryContainer</item>
        <item name="android:textColor">?colorTertiaryContainer</item>
    </style>

    <style name="myCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">?colorOnPrimaryContainer</item>
        <item name="android:textColor">?colorTertiaryContainer</item>
    </style>

    <style name="myChipChoiceStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_choice_color</item>
    </style>

    <style name="myChipChoiceStyle_2" parent="myChipChoiceStyle">
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>

    <style name="mySpinnerDropDownItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">?colorOnSecondaryContainer</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">5</item>
        <item name="android:background">?colorSecondaryContainer</item>
        <item name="android:paddingStart">@dimen/margin_4dp</item>
    </style>

    <style name="myOutlinedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/text_input_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/text_input_stroke_width</item>
        <item name="helperTextTextColor">?colorSecondary</item>
        <item name="hintTextColor">?colorSecondary</item>
        <item name="counterTextColor">?colorSecondary</item>
        <item name="endIconTint">?colorSecondary</item>
        <item name="startIconTint">?colorSecondary</item>
    </style>
</resources>