<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASArog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/myFabStyle</item>
        <item name="materialButtonStyle">@style/myContainedButtonsStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
    </style>

    <style name="Theme.NASArog_2" parent="Theme.NASArog">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorOnPrimary">@android:color/holo_red_dark</item>
        <item name="background">@android:color/holo_red_dark</item>
        <item name="floatingActionButtonStyle">@style/myFabStyle_2</item>
        <item name="materialButtonStyle">@style/myContainedButtonsStyle_2</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle_2</item>
    </style>
</resources>

